{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "keeb",
  "version": "0.1.0",
  "identifier": "com.keeb.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/keeb/browser"
  },
  "app": {
    "windows": [
      {
        "title": "keeb",
        "width": 800,
        "height": 700,
        "minWidth": 800,
        "minHeight": 700,
        "resizable": true,
        "center": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli":{
      "description": "On-Screen keyboard for Human-Computer Interface studies",
      "args": [
        {
          "name": "order",
          "short": "o",
          "takesValue": true,
          "multiple": true
        },
        {
          "name": "limit",
          "short": "l",
          "takesValue": true
        },
        {
          "name": "demo",
          "short": "d",
          "takesValue": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
